    MainColor = Color3.fromRGB(20,20,20),
    Accent = Color3.fromRGB(45,45,45),
    ButtonOn = Color3.fromRGB(80,80,80),
    ButtonOff = Color3.fromRGB(28,28,28),
    Text = Color3.fromRGB(255,255,255),
    SubText = Color3.fromRGB(160,160,160),
    BGTransparency = 0.14,
    ButtonTransparency = 0.11,
    Font = Enum.Font.GothamBold,
}

local gui = Instance.new("ScreenGui")
gui.Name = "ZWCscripts_DarkUniversalMenu"
gui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui") or LocalPlayer:WaitForChild("PlayerGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

