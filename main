-- Animasyonlu oval buton (kapat/küçült)
local function animatedButton(icon, color, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 34, 0, 34)
    btn.BackgroundColor3 = color
    btn.BackgroundTransparency = 0
    btn.AutoButtonColor = false
    btn.Text = icon
    btn.Font = CFG.Font
    btn.TextSize = 21
    btn.TextColor3 = color == CFG.Accent and Color3.fromRGB(255,255,255) or CFG.Text
    btn.ZIndex = 5
    btn.BorderSizePixel = 0
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 17)
    btnCorner.Parent = btn
    btn.Activated:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.10), {
            BackgroundColor3 = color:Lerp(Color3.fromRGB(180,180,180),0.3)
        }):Play()
        callback()
        wait(0.12)
        TweenService:Create(btn, TweenInfo.new(0.14), {
            BackgroundColor3 = color
        }):Play()
    end)
    return btn
end

local close = animatedButton("✕", CFG.Accent, function() gui:Destroy() end)
close.Position = UDim2.new(1,-42,0.5,-17)
close.Parent = bar

local minimize = animatedButton("—", CFG.Accent, function()
    main.Visible = false
    gui.Minimized.Visible = true
end)
minimize.Position = UDim2.new(1,-80,0.5,-17)
minimize.Parent = bar

