    Accent = Color3.fromRGB(30,30,30),          -- Sekme barı ve kutular siyah
    ButtonOn = Color3.fromRGB(0,0,0),
    ButtonOff = Color3.fromRGB(255,255,255),
    Text = Color3.fromRGB(0,0,0),               -- Yazılar siyah
    SubText = Color3.fromRGB(60,60,60),
    Font = Enum.Font.GothamBold,
}

